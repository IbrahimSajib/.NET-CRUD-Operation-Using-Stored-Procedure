@model SP_CRUD.Models.Book

@{
    ViewData["Title"] = "Edit";
}

<div class="card my-2 col-lg-8 mx-auto">
    <div class="card-header">
        <h3>Edit Book</h3>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookId" />
            <div class="row mb-2">
                <div class="col-2 fw-semibold">
                    <label asp-for="Title" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Title" class="form-control" />
                </div>
                <div class="col-4">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row mb-2">
                <div class="col-2 fw-semibold">
                    <label asp-for="Author" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Author" class="form-control" />
                </div>
                <div class="col-4">
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex offset-2 mt-3">
                <input type="submit" value="Update Data" class="btn btn-success btn-sm" />
            </div>
        </form>
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-start">
            <a asp-action="Index" class="btn btn-link text-decoration-none btn-sm"><i class="fa fa-arrow-circle-left"></i> Back to List</a>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
