@model SP_CRUD.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<div class="card row col-lg-8 mx-auto mt-3">
    <h3 class=" card-header alert alert-danger">Are you sure you want to delete this?</h3>
    <div class="card-body">
        <p m-10> <span class="fw-bold">@Html.DisplayNameFor(x => x.Title) : </span> @Html.DisplayFor(x => x.Title)</p>
        <p m-10> <span class="fw-bold">@Html.DisplayNameFor(x => x.Author) : </span> @Html.DisplayFor(x => x.Author)</p>
        <form asp-action="Delete">
            <input type="hidden" asp-for="BookId" />
            <div>
                <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
            </div>
        </form>
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-start">
            <a asp-action="Index" class="btn btn-link btn-sm text-decoration-none"><i class="fa fa-arrow-circle-left"></i> Back to List</a>
        </div>
    </div>
</div>